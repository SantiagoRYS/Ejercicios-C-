<Window x:Class="WpfAppDia.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppDia"
        mc:Ignorable="d"
        Title="MainWindow" Height="337" Width="448">
    <Grid Margin="0,0,10,-6">
        <GroupBox HorizontalAlignment="Left" Height="189" Header="Calcular segundos" Margin="15,20,0,0" VerticalAlignment="Top" Width="284">
            <Canvas/>
        </GroupBox>
        <Label Content="Ingrese numero de dias:" HorizontalAlignment="Left" Margin="37,54,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LblSegundos" Content="" HorizontalAlignment="Left" Margin="41,124,0,0" VerticalAlignment="Top" Width="232"/>
        <TextBox x:Name="TxbDias" HorizontalAlignment="Left" Margin="44,85,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnCalcular" Content="Calcular" HorizontalAlignment="Center" Margin="0,78,0,0" VerticalAlignment="Top" Height="32" Width="60" Click="BtnCalcular_Click"/>
        <Button x:Name="BtnSalir" Content="Salir" HorizontalAlignment="Center" Margin="0,164,0,0" VerticalAlignment="Top" Height="29" Width="60" Click="BtnSalir_Click"/>

    </Grid>
</Window>
