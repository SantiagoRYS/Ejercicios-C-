        <Button x:Name="BtnTotal" Content="Calcular total" HorizontalAlignment="Left" Margin="292,281,0,0" VerticalAlignment="Top" Height="28" Width="108" Click="BtnTotal_Click"/>

    </Grid>
</Window>
