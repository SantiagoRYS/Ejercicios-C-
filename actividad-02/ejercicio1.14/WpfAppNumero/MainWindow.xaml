<Window x:Class="WpfAppNumero.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppNumero"
        mc:Ignorable="d"
        Title="MainWindow" Height="266" Width="460">
    <Grid>
        <GroupBox HorizontalAlignment="Left" Height="172" Header="Validar numero primo" Margin="10,10,0,0" VerticalAlignment="Top" Width="359">
            <Canvas>
                <Label Content="Ingresa el numero:" Canvas.Left="39" Canvas.Top="38"/>
                <TextBox x:Name="TxtNumero" Canvas.Left="183" TextWrapping="Wrap" Canvas.Top="42" Width="120" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <Button x:Name="BtnValidar" Content="validar" Canvas.Left="55" Canvas.Top="96" Height="32" Width="77" Click="BtnValidar_Click"/>
                <Button x:Name="BtnSalir" Content="Salir" Canvas.Left="215" Canvas.Top="97" Height="30" Width="56" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BtnSalir_Click"/>
            </Canvas>
        </GroupBox>

    </Grid>
</Window>
