<Window x:Class="WpfAppLlamada.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppLlamada"
        mc:Ignorable="d"
        Title="MainWindow" Height="449" Width="791">
    <Grid>
        <GroupBox HorizontalAlignment="Left" Height="229" Header="Precio de la llamada" Margin="47,45,0,0" VerticalAlignment="Top" Width="425">
            <Canvas>
                <Button x:Name="BtnVerCosto" Content="Ver Costo" Canvas.Left="55" Canvas.Top="103" Height="30" Width="80" HorizontalAlignment="Left" VerticalAlignment="Center" Click="BtnVerCosto_Click"/>
                <TextBox x:Name="TxtDuracion" Canvas.Left="206" TextWrapping="Wrap" Canvas.Top="43" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            </Canvas>
        </GroupBox>
        <Label Content="Duración de la llamada:" HorizontalAlignment="Left" Margin="81,103,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnSalir" Content="Salir" HorizontalAlignment="Left" Margin="289,226,0,0" VerticalAlignment="Top" Height="30" Width="61" Click="BtnSalir_Click"/>
        <Label x:Name="LblCosto" Content="" HorizontalAlignment="Left" Margin="260,169,0,0" VerticalAlignment="Top" Width="122"/>

    </Grid>
</Window>
