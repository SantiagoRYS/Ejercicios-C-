        <TextBox x:Name="TxbNombreC" HorizontalAlignment="Left" Margin="131,75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxbCredito" HorizontalAlignment="Left" Margin="167,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="84"/>
