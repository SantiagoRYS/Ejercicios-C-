        <Button x:Name="BtnCapturarC" Content="Capturar cliente" HorizontalAlignment="Left" Margin="324,84,0,0" VerticalAlignment="Top" Height="29" Width="108" Click="BtnCapturarC_Click"/>
        <Button x:Name="BtnMostrarC" Content="Mostrar clientes" HorizontalAlignment="Left" Margin="324,145,0,0" VerticalAlignment="Top" Height="29" Width="108" Click="BtnMostrarC_Click"/>
        <Button x:Name="BtnCapturarE" Content="Capturar empleado" HorizontalAlignment="Left" Margin="324,258,0,0" VerticalAlignment="Top" Height="28" Width="108" Click="BtnCapturarE_Click"/>
        <Button x:Name="BtnMostrarE" Content="Mostrar empleados" HorizontalAlignment="Left" Margin="324,320,0,0" VerticalAlignment="Top" Height="30" Width="108" Click="BtnMostrarE_Click"/>
        <Label Content="Nombre:" HorizontalAlignment="Left" Margin="60,254,0,0" VerticalAlignment="Top"/>
        <Label Content="Dirección:" HorizontalAlignment="Left" Margin="60,294,0,0" VerticalAlignment="Top"/>
        <Label Content="Salario:" HorizontalAlignment="Left" Margin="63,334,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="TxbSalario" HorizontalAlignment="Left" Margin="131,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxbDireccionE" HorizontalAlignment="Left" Margin="131,300,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="TxbNombreE" HorizontalAlignment="Left" Margin="131,258,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtnSalir" Content="Salir" HorizontalAlignment="Left" Margin="324,397,0,0" VerticalAlignment="Top" Width="108" Height="35" Click="BtnSalir_Click"/>

    </Grid>
</Window>
